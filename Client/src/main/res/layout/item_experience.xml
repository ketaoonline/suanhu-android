<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/top_line"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/main_text_checked"
            android:layout_gravity="center_horizontal"></View>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/point_green"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/main_text_checked"
            android:layout_gravity="center_horizontal"></View>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:layout_marginTop="7dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1995.01-1995.01"
            android:textColor="#ff333333"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:lineSpacingExtra="2dp"
            android:text="智明大师介绍智明大师介绍智明大师介绍智明大师介绍智明大师介绍智明绍大师介绍智明大师介绍智明大师介绍智明大师介绍智明大师介绍智明大师介绍智明大师介绍智明大师介绍智明绍大师介绍智明大师介绍智明大师介绍"
            android:textColor="#ff333333"
            android:textSize="10sp"/>

    </LinearLayout>



</LinearLayout>